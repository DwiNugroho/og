{
  "private": true,
  "name": "nextjs-typescript-tailwind",
  "version": "2.0.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji-conventional"
    }
  },
  "dependencies": {
    "@tabler/icons-react": "^2.44.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "next": "14.0.4",
    "next-themes": "^0.2.1",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.1.0"
  },
  "devDependencies": {
    "@dwinugroho/eslint-config": "^1.0.0",
    "@dwinugroho/prettier-config": "^1.0.2",
    "@dwinugroho/tsconfig": "^1.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "cz-emoji-conventional": "^1.0.2",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "next/core-web-vitals",
      "@dwinugroho/eslint-config"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest"
    },
    "rules": {
      "tailwindcss/no-custom-classname": 0
    }
  },
  "lint-staged": {
    "src/**/*.{js,mjs,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write --ignore-path .gitignore ."
    ],
    "src/**/*.{css,scss,md,html,json}": [
      "prettier --write --ignore-path .gitignore ."
    ]
  },
  "prettier": "@dwinugroho/prettier-config"
}
